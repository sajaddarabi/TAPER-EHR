{
    "name": "text discharge",
    "n_gpu": 1,
    
    "model": {
        "type": "GRUAE",
        "module_name": "gru_ae",
        "args": { 
            "teacher_forcing_ratio": 0.5,
            "hidden_size": 512,
            "max_length": 29,
            "num_layers" : 2,
            "bidirectional": true,
            "input_size": 768 
            }
    },
    "data_loader": {
        "type": "TextDataLoader",
        "args": {
            "data_dir": "./data/textcode/biobert_pubmed/",
            "text": "discharge",
            "batch_size": 32,
            "shuffle": true,
            "split_num":0,
            "validation_split": 0.0,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "TextSummTrainer",
        "module_name": "text_summarization_trainer",
        "epochs": 30,
        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2000,
        "log_step": 2000,
        "early_stop": 10,
        "tensorboardX": false,
        "log_dir": "saved/runs"
    }
}
